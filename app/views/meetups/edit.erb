<form method="post" action="/meetups/edit/<%= @meetup.id %>">
  <input type="hidden" name="_method" value="PATCH">
  <label for="add-name">Name</label>
  <input type="text" name="name" id="add-name" value="<%= @name || @meetup.name %>">
  <label for="location">Location</label>
  <input type="text" name="location" id="location" value="<%= @location || @meetup.location %>">
  <label for="description">Description</label>
  <input type="text" name="description" id="description" value="<%= @description || @meetup.description %>">
  <input type="submit" value="Update Meetup" />
</form>
